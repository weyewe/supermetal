<% if new_object.persisted? %>
	<% id = 'edit_object'%>
<% else %>
	<% id = 'new_object'%>
<% end %>

<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => " prevent_double_submit ajax-form   no_content_form",
        :id => "#{id}"}) do |f| %>

	 


  <%= f.input :due_date  , :input_html => {:class => "input-xlarge ", :value => "#{print_date_input(new_object.due_date)}"}, 
  			:label => "Jatuh Tempo",
				:hint => "format: <b>dd</b>/<b>mm</b>/<b>yyyy</b>. <br />" + 
								"Contoh untuk 7 july 2003: 7/7/2003 <br />" + 
								"Contoh untuk 13 October 2003: 13/10/2003",
 				:as => :string%>
 

  <div class="form-actions">
	
		<% if new_object.persisted? %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Update Invoice" %>
		<% else %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Create Invoice" %>
		<% end %>
		
  </div>
<% end %>


 