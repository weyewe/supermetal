 
<tr id="entry-<%= object.id %>">
	<td>
		<%= link_to "#{object.code}" , new_delivery_delivery_entry_url( object)%>
	</td>
	<td>
		<%= "#{object.customer.name}" %>
	</td>
	
	<td>
		<%= print_date(object.delivery_date )%>
	</td>
	 
 	<td>
		<% if object.is_confirmed == true %>
			<span class="label label-primary">confirmed</span>
		<% else %>
			<span class="label label-tertiary">Pending</span>
		<% end %>
	</td>
	
	<td>
		<%= object.delivery_entries.count %>
	</td>
	
	
	<% if not object.is_confirmed? %>
		<td>
			<%= link_to root_url, :class =>"delete_entry", :style => "cursor:pointer; text-decoration:none;" do %>
				<i class='icon-remove'></i>Delete
			<% end %> 
		</td>

		<td>
			<%= link_to edit_delivery_url(object), 
				:class =>"edit_entry modal-toggler", :style => "cursor:pointer; text-decoration:none;" do %>
				<i class='icon-edit'></i>Edit
			<% end %>
		</td>
	<% elsif object.is_confirmed? and not object.is_finalized?  %>
		<td colspan='2'>
			Finalize
		</td>
	<% elsif object.is_confirmed? and  object.is_finalized?  %>
		<td colspan='2'>
			FINALIZED
		</td>
	<% end %>
	
</tr>