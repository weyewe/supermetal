$(document).ready(function(){
	// remove the spin
	
	var $modal = $("#editEntry");
	var $form = $("form", $modal );
	$form.spin(false); 
	
	// if update is successful
		// remove the form 
		// hide the modal 
		// update the row entry 
	// else
		// replace the form with the faulty one 
		// show all the error 
	
	
		<% if   @has_no_errors  %> 
			// clean the add product form
			$form.remove(); 
			$.msgbox("Berhasil update Sales Item: <%= @object.code %>", 
						{type: "info"});

			$modal.modal('hide');
			
			<% if not params[:details].nil? and params[:details].to_i == 1  %>
				// re render the shite 
				<% details = escape_javascript( render :partial => "sales_orders/details", 
					:locals => {
				    :parent => @object.sales_order ,
						:children 		=> @object.sales_order.sales_items.order("created_at DESC")
			  })%>

				var $details = $("#details")
				var $details_wrapper = $("#details_wrapper");
				var $details_dummy = $("#details_dummy");

				// 2. the viewer + add shite
				if($details.length == 0 ){
					$details_wrapper.append('<%= details %>');
				}else{
					$details.replaceWith('<%= details %>')
				}

				$details_wrapper.show();
				$details_dummy.hide();
				
			<% else %>
				<% new_entry  = escape_javascript( render :partial =>  'sales_items/entry', :locals => {
					:object => @object ,
					:parent => @parent 
				} )%>

				$("#entry-<%= @object.id %>").replaceWith('<%= new_entry %>');
			<% end %>

			

			


		<% elsif  not @has_no_errors %> 
			<% new_form = escape_javascript(   render :partial => "sales_items/new_object_form", :locals => {
		    :new_object => @object , 
				:url => update_sales_item_url(@object, :details => params[:details])  
		  })%>
			//replace the form, show the edit
			$form.replaceWith("<%= new_form %>"); 

			$.msgbox("Error dalam update sales item: <%= @object.code %>", 
						{type: "error"});
		<% end %>



		jQuery('.prevent_double_submit').preventDoubleSubmit(); 
});