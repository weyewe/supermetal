$(document).ready(function(){
	
	var $row = $("#entry-<%= @object.id %>")
	$row.spin(false); 
	
	
	 
	
	<% if not params[:details].nil? and params[:details].to_i == 1  %>
		<% if @object.persisted? == false or @object.is_deleted %>
			$.msgbox("Berhasil menghapus sales order: <%= @object.code %>");
		<% else %>
			$.msgbox("Error: <%= @object.errors.messages %>", 
						{type: "error"});
		<% end %>
		
		<% details = escape_javascript( render :partial => "item_receivals/details", 
			:locals => {
		    :parent => @object ,
				:children 		=> @object.item_receival_entries.order("created_at DESC")
	  })%>
	
		var $details = $("#details")
		var $details_wrapper = $("#details_wrapper");
		var $details_dummy = $("#details_dummy");

		// 2. the viewer + add shite
		if($details.length == 0 ){
			$details_wrapper.append('<%= details %>');
		}else{
			$details.replaceWith('<%= details %>')
		}

		$details_wrapper.show();
		$details_dummy.hide();
	
	<% else %>
	// non details 
		<% if @object.persisted? == false or @object.is_deleted %>
		 
			$row.remove(); 
			$.msgbox("Berhasil menghapus penerimaan: <%= @object_identifier %>");
		<% else %>
			$.msgbox("Error", 
						{type: "error"});
		<% end %>
		
	<% end %>
});