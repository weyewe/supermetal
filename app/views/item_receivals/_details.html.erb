<div id='details'>
	<table class="table table-bordered table-striped table-highlight" id='tableview'>
		<thead>
			<tr>
				<th>Code</th>
				<th>Customer</th>
				<th>Tanggal Terima</th>  
				<th>Status</th>  
				<th>Total Penerimaan Bubut Item</th>  
				<th colspan='2'>Action</th>
			</tr>
		</thead>
		<tbody> 
			<% object = parent %>
			<tr id="parent_entry-<%= object.id %>">
				<td>
					<%=  object.code %>
				</td>
				<td>
					<%= "#{object.customer.name}" %>
				</td>

				<td>
					<%= print_date(object.receival_date )%>
				</td>

			 	<td>
					<% if object.is_confirmed == true %>
						<span class="label label-primary">confirmed</span>
					<% else %>
						<span class="label label-tertiary">Pending</span>
					<% end %>
				</td>

				<td>
					<%= object.item_receival_entries.count %>
				</td>


					<td>
						<%= link_to delete_item_receival_url(:details => 1 ), :class =>"delete_entry", 
							:style => "cursor:pointer; text-decoration:none;" do %>
							<i class='icon-remove'></i>Delete
						<% end %> 
					</td>

					<td>
						<%= link_to edit_item_receival_url(object, :details => 1 ), 
							:class =>"edit_entry modal-toggler", 
							:style => "cursor:pointer; text-decoration:none;" do %>
							<i class='icon-edit'></i>Edit
						<% end %>
					</td>
		 

			</tr>
		</tbody>
	</table>
	
	<hr />
	
	
	<%= render :partial => 'item_receival_entries/item_receival/item_list', :locals => {
		:objects => children, 
		:parent => parent,
		:details => 1 
	}%>
</div>
