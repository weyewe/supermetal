$(document).ready(function(){
	// remove the spin
	
	var $modal = $("#editEntry");
	var $form = $("form", $modal );
	$form.spin(false); 
	
	// if update is successful
		// remove the form 
		// hide the modal 
		// update the row entry 
	// else
		// replace the form with the faulty one 
		// show all the error 
	
	
		<% if   @has_no_errors  %> 
			// clean the add product form
			$form.remove(); 

			<% new_entry  = escape_javascript( render :partial =>  'production_repair_results/entry', :locals => {
				:object => @object ,
				:parent => @parent
			} )%>

			$("#entry-<%= @object.id %>").replaceWith('<%= new_entry %>') 

			$.msgbox(" Production Progress dengan ok: <%= @object.ok_quantity %> "+
			 					" dan rusak: <%= @object.broken_quantity %> " + 
							" sukses dibuat.", 
						{type: "info"});

			
			$modal.modal('hide'); 
 
			// update summary
			<%= render :file => "production_repair_results/update_summary", :locals => {
				:sales_item => @parent 
			}%>


		<% elsif  not @has_no_errors %> 
		
			<% new_form = escape_javascript(  render :partial => "production_repair_results/new_object_form", :locals => {
		    :new_object => @object , 
				:url => update_production_repair_result_url(@object) 
		  })%>
	 
			//replace the form, show the edit
			$form.replaceWith("<%= new_form %>"); 

			$.msgbox("Gagal membuat  Production Repair Progress baru.", 
						{type: "error"});
		<% end %>



		jQuery('.prevent_double_submit').preventDoubleSubmit(); 
});