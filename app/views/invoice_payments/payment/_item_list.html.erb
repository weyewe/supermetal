<table class="table table-bordered table-striped table-highlight" id='tableview'>
	<thead>
		<tr>
			<th>Invoice</th>
			<th>Jumlah Pembayaran</th>  
			<th>Belum Dibayar</th>  
			
			<% if not parent.is_confirmed? %>
				<th colspan='2'>Action</th>
			<% end %>
		</tr>
	</thead>
	<tbody> 
		<% objects.each do |object| %>
			<%= render :partial =>  'invoice_payments/entry', :locals => {
				:object => object ,
				:parent => parent 
			} %> 
		<% end %>
	</tbody>
</table>