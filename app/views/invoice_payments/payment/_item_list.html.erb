<table class="table table-bordered table-striped table-highlight" id='tableview'>
	<thead>
		<tr>
			<th>Invoice</th>
			<th>Jumlah Pembayaran</th>  
			<th>Belum Dibayar</th>  
			
			<%# if not parent.is_confirmed? %>
				<th colspan='2'>Action</th>
			<%# end %>
		</tr>
	</thead>
	<tbody> 
		<% if not defined?(details)  %>
			<% details = 0 %>
		<% end %>
		<% objects.each do |object| %>
			<%= render :partial =>  'invoice_payments/entry', :locals => {
				:object => object ,
				:parent => parent ,
				:details => details
			} %> 
		<% end %>
	</tbody>
</table>