<table class="table table-bordered table-striped table-highlight" id='actionbar'>
	<tbody>
		<tr>
			<td style='text-align:left;'>
				<%= link_to new_delivery_delivery_entry_url( parent ), 
					:class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Delivery Entry Baru
				<% end %>
			</td>
			
			<% if current_user.has_role?(:delivery_entries,    :create_special_delivery_entry) %>
			<td style='text-align:left;'>
				<%= link_to new_special_delivery_entry_url( parent), 
					:class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Special Delivery Baru
				<% end %>
			</td>
			<% end %>
			
			<td style='text-align: right;'> 
				<%= link_to confirm_delivery_url(parent),
					:id => 'confirm' , 
					:class => " btn btn-primary" do %>
					<i class="icon-ok"></i> Confirm
				<% end %>
			</td>
		</tr>
	</tbody>
</table>